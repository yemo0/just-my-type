---
import FormattedDate from "./FormattedDate.astro";
const {posts} = Astro.props;
---

<main class="w-11/12 md:w-3/5 mx-auto mt-2">
    <section>
        <ul>
            {posts.map((post) => (
                <a href={`/blog/${post.slug}/`}>
                    <div class="flex flex-col border rounded-md border-zinc-200 mb-4 p-3 hover:cursor-pointer hover:shadow-md">
                        <div class="text-lg font-bold">{post.data.title}</div>
                        <div>{post.data.description}</div>
                        <div>
                            <FormattedDate date={post.data.pubDate} />Â·&nbsp;{Math.ceil(post.body.length / 275)}&nbsp;mins&nbsp;read
                        </div>
                    </div>
                </a>
            ))}
        </ul>
    </section>
</main>